<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".RegisterFragment" android:id="@+id/register_fragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/nss_reg"
                android:layout_marginTop="140dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:hint="@string/input_nss" android:textAlignment="center"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/name_reg"
                app:layout_constraintTop_toBottomOf="@+id/nss_reg" android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
                android:hint="@string/input_name" android:textAlignment="center"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                app:layout_constraintTop_toBottomOf="@+id/nss_reg"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="4dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/name_reg" android:layout_marginStart="20dp"
                android:id="@+id/firstname_reg" android:hint="@string/input_firstname" android:textAlignment="center"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/address_reg"
                app:layout_constraintTop_toBottomOf="@+id/firstname_reg" android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:hint="@string/input_address" android:textAlignment="center"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/phone_num_reg"
                app:layout_constraintTop_toBottomOf="@+id/address_reg" android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:hint="@string/input_phone_num" android:textAlignment="center"/>
        <Button
                android:text="@string/btn_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signup" android:layout_marginTop="60dp"
                app:layout_constraintTop_toBottomOf="@+id/phone_num_reg" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>